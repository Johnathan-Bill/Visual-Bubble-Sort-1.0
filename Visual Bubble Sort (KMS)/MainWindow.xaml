<Window x:Class="Visual_Bubble_Sort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visual_Bubble_Sort"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Canvas Name="grid">
        <Button Click="Button_Click" Content="Load Rectangles" HorizontalAlignment="Left" Margin="684,150,0,0" VerticalAlignment="Top"/>
        <Button Click="Sort" Content="Bubble Sort" Canvas.Left="684" Canvas.Top="175"/>
        <Button Click="Selection_Click" Content="Selection Sort" Canvas.Left="684" Canvas.Top="200"/>

    </Canvas>
</Window>
